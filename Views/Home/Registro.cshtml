@model Producto

@{
    ViewData["Title"] = "Registrar Productos";
}

<div class="text-center">
    <h1 class="display-4">Registre los datos de su producto</h1>
    
    <form method="POST">
        <div class="form-group">
            <label asp-for="NombreP"></label>
            <input asp-for="NombreP" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Foto"></label>
            <input asp-for="Foto" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Descripcion"></label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Foto"></label>
            <input asp-for="Foto" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Precio"></label>
            <textarea asp-for="Precio" type="number"  class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Celular"></label>
            <textarea asp-for="Celular" type="number" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="LugarCompra"></label>
            <input asp-for="LugarCompra" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NomComprador"></label>
            <input asp-for="NomComprador" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Categoria"></label>
            <select asp-for="Categoria" class="form-control">
                <option value="Tecnologia">Arte</option>
                <option value="Ropa">Ropa</option>
                <option value="Muebles">Muebles del Hogar</option>
            </select>
        </div>
        <button class="btn btn-primary">Enviar</button>
    </form>
</div>
